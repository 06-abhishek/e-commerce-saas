# SMTP Configuration (Alternative Email Service)
SMTP_HOST=<your_smtp_host>  # Example: smtp.mailtrap.io
SMTP_PORT=<your_smtp_port>  # Example: 2525
SMTP_USER=<your_smtp_username>  
SMTP_PASS=<your_smtp_password>  

# JWT Configuration (Authentication Tokens)
JWT_SECRET=<your_jwt_secret_key>  # Example: a_long_random_secret_key
JWT_EXPIRES=<jwt_expiry_time>  # Example: 7d (7 days), 1h (1 hour)