# Server Configuration
PORT=<your_server_port>  # Example: 3000

# Database Configuration
MONGODB_URI=<your_mongodb_connection_string>  # Example: mongodb+srv://username:password@cluster.mongodb.net/db-name

# JWT Configuration (Authentication Tokens)
JWT_SECRET=<your_jwt_secret_key>  # Example: a_long_random_secret_key
JWT_EXPIRES=<jwt_expiry_time>  # Example: 7d (7 days), 1h (1 hour)

# Redis Configuration (Caching)
REDIS_HOST=<your_redis_host>  # Example: 127.0.0.1
REDIS_PORT=<your_redis_port>  # Example: 6379

# Email Configuration (For Sending Emails)
EMAIL_HOST=<your_email_host>  # Example: smtp.gmail.com
EMAIL_PORT=<your_email_port>  # Example: 587
EMAIL_USER=<your_email_address>  # Example: your-email@gmail.com
EMAIL_PASS=<your_email_password>  # Note: Use app password if using Gmail